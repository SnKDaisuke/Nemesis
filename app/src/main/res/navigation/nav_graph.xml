<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragment_anime_list">

    <fragment
        android:id="@+id/fragment_anime_list"
        android:name="com.example.nemesis.presentation.list.AnimeListFragment"
        android:label="@string/fragment_anime_list"
        tools:layout="@layout/fragment_anime_list">

        <action
            android:id="@+id/action_AnimeList_to_AnimeDetails"
            app:destination="@id/AnimeDetails" />
    </fragment>
    <fragment
        android:id="@+id/AnimeDetails"
        android:name="com.example.nemesis.presentation.details.AnimeDetailsFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_anime_detail">
        <argument
            android:name="anime_id"
            app:argType="integer"
            android:defaultValue="0"/>

        <action
            android:id="@+id/action_AnimeDetails_to_AnimeList"
            app:destination="@id/fragment_anime_list" />
    </fragment>
</navigation>